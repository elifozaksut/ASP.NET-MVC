@model Models.Category

<div class="form-group col-md-6">
    @using (Html.BeginForm("Insert", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="txtName">Kategori Adı: </label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "txtName" } })
            <br />
            <label for="txtOrder">Sıralama:</label>
            @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control", id = "txtOrder" } })
            <div >
                @*@Html.ValidationMessageFor(model => model.Order, "Sıralama Boş Geçilemez", new { @class = "text-danger" })*@

            </div>
        </div>
        <button type="submit" class="btn btn-info btn-fill pull-right form-control ">Kaydet</button>
            <div class="clearfix"></div>
    }

</div>
   
     
