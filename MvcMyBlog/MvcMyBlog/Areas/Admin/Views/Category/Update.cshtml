
@{
   
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

@model Models.Category

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Kategori Güncelleme</h4>
                    </div>
                    <div class="content">                       
                        @using (Html.BeginForm("Update", "Category", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Kategori ID:</label>
                                @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @readonly = "true" })
                                <label for="txtName">Kategori Adı: </label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "txtName" } } )
                                <label for="txtOrder">Sıralama:</label>
                                @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control", id = "txtOrder" } })
                                <div class="col-md-10">
                                    @*@Html.ValidationMessageFor(model => model.Order, "Sıralama Boş Geçilemez", new { @class = "text-danger" })*@                              
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right form-control ">Güncelle</button>
                            <div class="clearfix"></div>
                        }                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


