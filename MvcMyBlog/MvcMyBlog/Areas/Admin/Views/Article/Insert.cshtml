@model Models.Article

@using (Html.BeginForm("Insert", "Article", FormMethod.Post))
{
    <div class="form">
        <div class="form-group col-md-6" style="padding-left:6px">
            <label>Makale Başlığı</label>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control "} })        
        </div>    
        <div class="form-group col-md-6">
            <label>Fotoğraf Seç:</label>
            @Html.TextBoxFor(model => model.Photo, new { type = "file", @class = "form-control " })
        </div>
        <div class="form-group col-md-6">
            <label>Kategori:</label>
            @Html.DropDownListFor(model => model.CategoryId, (IEnumerable<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control " })
            
        </div>
        <div class="form-group col-md-6">
            <label>Yazar:</label>
            @Html.DropDownListFor(model => model.AuthorId, (IEnumerable<SelectListItem>)ViewBag.AuthorList, new { @class = "form-control " })
           
        </div>
        <div class="form-group col-md-12">
            <label>İçerik:</label>
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @cols = 80, @rows = 10 })
        </div>    
         
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-fill pull-right form-control ">Kaydet</button>
        <div class="clearfix"></div>
    </div>
    

}   